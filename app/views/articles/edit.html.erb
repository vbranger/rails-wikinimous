<div class="container">
  <div class="row">
    <div class="col">
      <h1>Edit article</h1>
      <%= simple_form_for(@article) do |f| %>
        <%= f.input :title %>
        <%= f.input :content %>
        <%= f.submit %>
      <% end %>
      <%= link_to "Show", article_path(@article) %> | <%= link_to "Back", articles_path %>
    </div>
  </div>
</div>
